@using BARBERSHOP_STUDIO.Models
@model IEnumerable<Appointment> 
@{
    ViewData["Title"] = "My Appointments"; 
    
}

<h2>My Appointments</h2>

<table class="table"> 
    <thead>
        <tr>
            <th>Date</th>
            <th>Service</th>
            <th>Barber</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.AppointmentDate.ToString("g")</td>
                <td>@appointment.Service</td>
                <td>@appointment.Barber.Name</td>
                <td>@ViewBag.Cost</td>
                <td>
                    <a asp-action="CancelAppointment" asp-route-id="@appointment.AppointmentId" class="btn btn-danger">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>


