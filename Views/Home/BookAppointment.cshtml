@using BARBERSHOP_STUDIO.Models
@model Appointment
@{
    ViewData["Title"] = "Book Appointment"; 
}

<h2>Book Appointment</h2>

<form asp-action="BookAppointment" method="post">
    <div class="form-group">
        <label asp-for="AppointmentDate"></label>
        <input asp-for="AppointmentDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Id">Service</label>
        <select asp-for="Id" class="form-control" asp-items="@(new SelectList(ViewBag.Services, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label>Barber</label>
        <select asp-for="BarberId" class="form-control" asp-items="@(new SelectList(ViewBag.Barbers, "BarberId", "Name"))"></select>
    </div>
    <button type="submit" class="btn btn-primary">Book</button>
</form>
